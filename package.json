{
  "name": "electron-angular-prj",
  "version": "0.0.0",
  "main": "src/main_src/js/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "electron": "electron .",
    "build:ng-watch": "ng build -c development --base-href ./ --watch",
    "build:ng-dev": "ng build -c amplify-dev --base-href ./",
    "build:ng-prod": "ng build -c amplify-prod --base-href ./",
    "build:mn-watch": "npx webpack --watch",
    "build:mn-dev": "npx webpack --mode development",
    "build:mn-prod": "npx webpack --mode production",
    "build:all-watch": "run-p build:mn-watch build:ng-watch",
    "build:all-dev": "run-p build:mn-dev build:ng-dev",
    "build:all-prod": "run-p build:mn-prod build:ng-prod",
    "builder": "electron-builder --win --x64",
    "build:win": "run-s build:mn-prod build:ng-prod builder"
  },
  "build": {
    "appId": "sample.xxxx.xxxx",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "icon": "front_src/assets/images/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "front_src/assets/images/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/localize": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "@aws-amplify/ui-angular": "^2.4.20",
    "@ng-bootstrap/ng-bootstrap": "^13.0.0",
    "@popperjs/core": "^2.10.2",
    "aws-amplify": "^4.3.35",
    "bootstrap": "^5.2.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "moment": "^2.29.4",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.4",
    "@angular/cli": "~14.0.4",
    "@angular/compiler-cli": "^14.0.0",
    "@types/jasmine": "~4.0.0",
    "@types/lodash": "^4.14.184",
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3",
    "electron-reload": "^2.0.0-alpha.1",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.3.1",
    "typescript": "~4.7.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
